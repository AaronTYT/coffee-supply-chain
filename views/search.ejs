<%- include('header'); -%>
<div class="container" style="padding-top: 3%">
    <header class="bg-primary p-4 text-white text-center">
        <h1><%= searchType %>: </h1>
        <h4>Found <%= num %> results:</h4>
    </header>
    <table class="table table-striped table-bordered table-hover text-center">
        <thead>
            <tr>
                <th scope="col">Company Name</th>
                <!-- <th scope="col">Party Name</th> -->
                <th scope="col">Buy</th>
                <th scope="col">Sell</th>
                <th scope="col"><%= type %></th>
            </tr>
        </thead>
        <tbody>
            <% 
            var data = ""
            if(x == 1){
                data = "PartyName"
            }else if(x == 2){
                data = "CountryName"
            }

            for (let i=0; i < newListItems.length; i++) { %>
            <tr>
                <!-- <td> <%= newListItems[i] %> </td> -->
                <td> <%= newListItems[i]["CompanyName"] %> </td>
                <!-- <td> <%= newListItems[i]["PartyName"] %> </td> -->
                <td> <%= newListItems[i]["Buy"] %> </td>
                <td> <%= newListItems[i]["Sell"] %> </td>
                <td><%= newListItems[i][data] %></td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <br>
    <p class="mt-5 mb-3 text-muted text-center">&copy; <script>document.write(new Date().getFullYear())</script>
    Copyright Aaron Tan</p>
</div>

</body>
</html>